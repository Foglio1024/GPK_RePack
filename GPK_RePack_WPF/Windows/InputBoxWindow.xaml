<Window x:Class="GPK_RePack_WPF.Windows.InputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPK_RePack_WPF.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="InputBoxWindow" MinHeight="140" Width="400" SizeToContent="Height"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Hint" Margin="20 10"/>
        <TextBox VerticalAlignment="Center" Margin="20 0 20 0" Grid.Row="1"
                 Text="{Binding ReturnValue, RelativeSource={RelativeSource AncestorType=local:InputBoxWindow}}"/>
        <Button Content="Ok" Grid.Row="2"
                Margin="20 10"
                Width="70"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Click="OnOkButtonClick"/>
    </Grid>
</Window>
